{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
	  "enabled": true
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true,
		"suspicious": {
		  "noExplicitAny": "warn",
		  "recommended": true
		},
		"correctness": {
		  "noUnusedVariables": "warn",
		  "recommended": true
		},
		"style": {
		  "noUnusedTemplateLiteral": "off",
		  "noVar": "warn",
		  "recommended": true
		},
		"a11y": {
		  "useKeyWithClickEvents": "off",
		  "recommended": true
		}
	  },
	  "ignore": ["build/*", "node_modules", ".next"]
	},
	"formatter": {
	  "enabled": true,
	  "indentStyle": "space",
	  "indentSize": 2,
	  "lineWidth": 110,
	  "ignore": ["*.js", "node_modules", ".next"],
	  "formatWithErrors": true
	},
	"javascript": {
	  "formatter": {
		"trailingComma": "none",
		"semicolons": "always"
	  }
	}
  }
  